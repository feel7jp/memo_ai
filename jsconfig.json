{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "module": "ESNext",
        "checkJs": true,
        "maxNodeModuleJsDepth": 1,
        "strict": false,
        "noImplicitThis": false,
        "strictNullChecks": false
    },
    "include": [
        "public/**/*.js",
        "public/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}